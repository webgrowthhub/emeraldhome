</head>
<body class="hold-transition sidebar-mini">
  
<div class="wrapper">
 
 <!-- Navbar -->
 <header> 
  <nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top main_menu">
      <div class="container">
      <!-- Brand -->
      <a class="navbar-brand col-6 col-md-5 col-lg-5" href="/"><img src="./images/logo.png" alt="logo"></a>
    
      <!-- Toggler/collapsibe Button -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <!-- Navbar links -->
          <div class="collapse navbar-collapse col-6 col-lg-7 col-md-7 justify-content-end" id="collapsibleNavbar">
          <ul class="navbar-nav">
              <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
              </li>
             
              <li class="nav-item">
              <a class="nav-link" href="/contact"> Contact Us</a>
              </li>
              </ul>
          </div>
       </div>
    </nav>
  </header>

<!-- /.navbar -->
<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <a href="/" class="brand-link text-center">
    <span class="brand-text font-weight-light">Emerald Park Memorial</span>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <% if (typeof DecresData !='undefined') { %>
    <% if (typeof DecresData[0]=='object') { %>
     
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <% if ( typeof(DecresData[0].profileimage) !='undefined') { %>
        <img src="<%=DecresData[0].profileimage %>" class="img-circle elevation-2" alt="User Image">
        <% } %>
      </div>
      <div class="info">
            <a href="#" class="d-block"><%= DecresData[0].Firstname %> <%= DecresData[0].Middlename %> <%= DecresData[0].Lastname %></a>
      </div>

    </div>

    <% } }%>

  <!-- Sidebar Menu -->
  <nav class="mt-2">
    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
      <!-- Add icons to the links using the .nav-icon class
           with font-awesome or any other icon font library -->
           <li class="nav-item has-treeview menu-open">
          
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="/" class="nav-link ">
                  <i class="fas fa-home"></i>
                  <p>Home</p>
                </a>
              </li>
            </ul>
          </li>       
        
          <li class="nav-item has-treeview">          
                         
     
        </ul>
      </li>
   
    </ul>
  </nav>
  <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>All Users</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">User Profile</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
          <div class="col-12">
          
            <!-- /.card -->
  
            <div class="card">
            
 
              <div class="card-body ">
                <table id="serach_table" class="table table-bordered table-striped">
                    <thead>
                    <tr>

                      <th>S no.</th>
                      <th>Profile Pic</th>
                      <th>First Name</th>
                      <th>Middle Name</th>
                      <th>Last Name</th>
                      <th>Maiden Name</th>
                      <th>Date of Birth</th>
                      <th>Date of death</th>
                      <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% if ( typeof(Alldata) !='undefined') { %>
                        <% var i=1; %>
                        <% Alldata.forEach(function(User) { %>
                          <tr>
                            <td><%=i %></td>
                            <td><img  class="img-fluid" height="50px" width="50px" src="https://emeraldparkmemorial.com.au/<%=User.profileimage %>" alt="User profile picture"></td>
                            <td> <%= User.Firstname %></td>
                            <td><%= User.Middlename %></td>
                            <td><%= User.Lastname %></td>
                            <td><%= User.maidanname %></td>
                            <td><%= User.dob %></td>
                            <td><%= User.dod %></td>
                         <%   var   Filepath='qrcode?username='+User.added_username; %>
                         <%  if(User.private_account == '1'){ %>
                          <td> <button type="button"  data-id="<%= User.private_account %>"  class="btn btn-block btn-secondary check_account">Visit Profile</button> </td>
                        <% }else{ %>
                          <td> <button type="button"  data-id="<%= User.private_account %>" data-src="<%=Filepath %>"  class="btn btn-block btn-secondary check_account">Visit Profile</button> </td>
                        <% }   %>
                            
                          </tr>
                         

                          <% i++; }); }%>
                        
                    
                     

                   
                
                    </tbody>
                   
                  </table>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </section>
    <!-- /.content -->
    <!-- Modal Popup -->
<div id="MyPopup" class="modal fade" role="dialog">
  <div class="modal-dialog">
      <!-- Modal content-->
      <form method="POST" action="" id="selelctdesign">
        <div class="modal-content">
          <!-- <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">
                  &times;</button>
              <h4 class="modal-title">
                
              </h4>
          </div> -->
          <div class="modal-body first_body">
           
             
            <!-- <label for="male">This account is Private</label><br> -->
              
          </div>
          <div class="modal-body">
            <label for="male">This account is Private</label><br>
          </div>
          <div class="modal-footer">
               <button type="submit" class="btn btn-danger" data-dismiss="modal">
                  Close</button> 
                 
          </div>
      </div>
    </form>
  </div>
     
   
</div>
  </div>
